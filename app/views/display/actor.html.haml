%h1 #{@actor[:name]}
=image_tag(@actor[:photo_url], alt: "photo of #{@actor[:name]}")
%p born #{@actor[:birth_name]} on #{@actor[:birth_date]}
%p= @actor[:bio]

%h2 Filmography
-@actor[:filmography].each do |film|
	%p
		%a{ href: "/view?m=#{film[:imdb_id]}", title: "#{film[:title]}"}
			#{film[:title]} - #{film[:year]} as #{film[:role]}